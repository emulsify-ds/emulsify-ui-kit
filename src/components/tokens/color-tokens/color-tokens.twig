<div>
	{% for color, value in _context.colors %}
		<h2 class="sb-title">{{color}}</h2>
		{% if value.value is defined %}
			<ul class="sb-list">
				<li style="background: var(--color-{{color}});" class="token-card">
					<span>
						{{color}}
						<span>
							<code class="sb-custom-property-name">var(--color-{{color}})</code>
						</span>
					</span>
				</li>
			</ul>
		{% else %}
			<ul class="sb-list">
				{% for nestedColor, nestedValue in value %}
					<li style="background: var(--color-{{color}}-{{nestedColor}});" class="token-card">
						<span>
							{{nestedColor}}
							<span>
								<code class="sb-custom-property-name">var(--color-{{color}}-{{nestedColor}})</code>
							</span>
						</span>
					</li>
				{% endfor %}
			</ul>
		{% endif %}
	{% endfor %}
</div>
