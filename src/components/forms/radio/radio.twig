{% if not attributes %}
	<fieldset class="form-item form-item--radio">
		<legend>Options as Radio Buttons</legend>
		<ul class="form-item--radios">
		{% endif %}
		{% for key, radio in radios %}
			{% include "@components/forms/radio/_radio-item.twig" with {
        radio_item: radio.title,
        radio_item_checked: radio.checked,
        radio_item_disabled: radio.disabled
      } %}
		{% endfor %}
		{% if not attributes %}
		</ul>
	</fieldset>
{% endif %}
